<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/order_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="№50342"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textSize="16dp"
        android:textFontWeight="700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/order_number_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="14dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/gray2"
        tools:text="20.04.2019 14:08" />

    <TextView
        android:id="@+id/status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textSize="16dp"
        android:textFontWeight="700"
        tools:text="Завершен автоматически" />

    <TextView
        android:id="@+id/delivery_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/status_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/gray2"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="4dp"
        tools:text="Самовывоз"/>

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="760 ₽"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="19dp"/>

    <Button
        android:id="@+id/repeat_button"
        style="@style/PrimaryButton"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gr2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>