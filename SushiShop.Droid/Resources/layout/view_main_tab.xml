<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:duplicateParentState="true"
    tools:layout_height="50dp"
    tools:layout_width="75dp">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginBottom="15dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/selector_main_tab_tint_color"
        tools:srcCompat="@drawable/ic_menu" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:fontFamily="@font/font_family_sf_pro_display_regular"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="@color/selector_main_tab_tint_color"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view"
        tools:text="Меню" />

    <View
        android:id="@+id/badge_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/orange2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/badge_text_view"
        app:layout_constraintEnd_toEndOf="@id/badge_text_view"
        app:layout_constraintStart_toStartOf="@id/badge_text_view"
        app:layout_constraintTop_toTopOf="@id/badge_text_view" />

    <TextView
        android:id="@+id/badge_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_family_sf_pro_display_regular"
        android:textColor="@color/white"
        android:textSize="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/image_view"
        app:layout_constraintEnd_toEndOf="@id/image_view"
        app:layout_constraintStart_toEndOf="@id/image_view"
        app:layout_constraintTop_toTopOf="@id/image_view"
        tools:text="9" />
</androidx.constraintlayout.widget.ConstraintLayout>